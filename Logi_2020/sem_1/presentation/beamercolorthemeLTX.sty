% General
\setbeamercolor{normal text}{fg=LTXDarkGrey}
\setbeamercolor{structure}{fg=LTXDarkGrey}
\setbeamercolor{alerted text}{fg=LTXRed}
\setbeamercolor{example text}{fg=LTXGreen}
\setbeamercolor{copyright text}{fg=LTXPurple}

% Palettes
\setbeamercolor{palette primary}{fg=LTXGrey, bg=LTXDarkGrey}
\setbeamercolor{palette secondary}{fg=LTXDarkGrey,bg=LTXGrey}
\setbeamercolor{palette tertiary}{fg=LTXLightBlue, bg=LTXDarkGrey}
\setbeamercolor{palette quaternary}{fg=LTXGrey, bg=LTXBlue}
\setbeamercolor{mini frame}{bg=LTXGrey}
\setbeamercolor{section in head/foot}{fg=LTXDarkGrey, bg=LTXGrey}

% Titlepage
\setbeamercolor{title}{parent=normal text}
\setbeamercolor{subtitle}{fg=LTXBlue}
\setbeamercolor{institute}{parent=normal text}

% Content
\setbeamercolor{frametitle}{parent=palette primary}

% Blocks
\setbeamercolor{block title}{fg=white,bg=LTXBlue}
\setbeamercolor{block body}{fg=LTXDarkGrey, bg=LTXGrey}
\setbeamercolor{block title example}{fg=white, bg=LTXGreen}
\setbeamercolor{block body example}{fg=LTXDarkGrey, bg=LTXLightGreen}
\setbeamercolor{block title alerted}{fg=white, bg=LTXRed}
\setbeamercolor{block body alerted}{fg=LTXDarkGrey, bg=LTXLightRed}

% Notes
\setbeamercolor{note page}{fg=LTXDarkGrey,bg=LTXGrey}
\setbeamercolor{note title}{fg=white, bg=LTXDarkGrey}
\setbeamercolor{note date}{parent=note title}

% Page Number
\setbeamercolor{page number in head/foot}{fg=LTXDarkGrey}
\setbeamercolor{qed}{fg=LTXGreen}
\setbeamercolor{itemize item}{fg=LTXBlue}
\setbeamercolor{itemize subitem}{fg=LTXRed}
\setbeamercolor{itemize subsubitem}{fg=LTXPurple}

\if@beamer@LTX@greybg
% General
\setbeamercolor{normal text}{fg=LTXDarkGrey,bg=LTXGrey}
\setbeamercolor{block body}{fg=LTXDarkGrey, bg=LTXLightBlue}
\fi

\if@beamer@LTX@cblock

